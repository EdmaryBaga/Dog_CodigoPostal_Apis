<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/title_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/login_de_baz"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:layout_marginTop="112dp" />

    <TextView
            android:id="@+id/label_usu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email Usuario"
            app:layout_constraintTop_toBottomOf="@+id/title_login"
            android:layout_marginTop="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="28dp"/>
    <EditText
            android:id="@+id/edit_txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/label_usu"
            android:layout_marginTop="10dp"
            tools:layout_editor_absoluteX="0dp"
    android:layout_marginStart="28dp"
    android:layout_marginEnd="35dp"/>

    <TextView
        android:id="@+id/label_contasena"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/contrase_a"
        app:layout_constraintTop_toBottomOf="@+id/edit_txt_email"
        android:layout_marginTop="15dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />

    <EditText
        android:id="@+id/edit_txt_contrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintTop_toBottomOf="@+id/label_contasena"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />

    <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edit_txt_contrasena"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textAlignment="center"
            android:layout_marginTop="44dp"
            tools:layout_editor_absoluteX="122dp"
            android:text="@string/iniciar_sesion"
            android:paddingEnd="45dp"
            android:paddingStart="45dp"/>

</android.support.constraint.ConstraintLayout>